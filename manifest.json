{
  "manifest_version": 3,
  "name": "Colorpad",
  "version": "1.0",
  "permissions": [
    "alarms",
    "notifications",
    "declarativeContent",
    "idle",
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Colorpad(Press Ctrl+Q to pick a color)",
    "default_popup": "popup/popup.html"
  },
  "omnibox": { "keyword" : "ziop" }
}